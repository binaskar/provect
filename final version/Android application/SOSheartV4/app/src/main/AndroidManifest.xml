<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ben.sosheartv4" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistrationActivity"
            android:label="@string/title_activity_registration" >
        </activity>
        <activity
            android:name=".PatientListActivity"
            android:label="@string/title_activity_patient_list" >
        </activity>
        <activity
            android:name=".PatientStateActivity"
            android:label="@string/title_activity_patient_state" >
        </activity>
        <activity android:name="org.achartengine.GraphicalActivity" />
        <activity
            android:name=".TipsActivity"
            android:label="@string/title_activity_tips" >
        </activity>
        <activity
            android:name=".RegistrationPatientActivity"
            android:label="@string/title_activity_registration_patient" >
        </activity>
        <activity
            android:name=".FollowPatientActivity"
            android:label="@string/title_activity_follow_patient" >
        </activity>
        <activity
            android:name=".PatientRegistrationActivity"
            android:label="@string/title_activity_patient_registration" >
        </activity>
    </application>

</manifest>
